<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/cardview_dark_background"
    tools:context=".GenDataActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="36dp"
        android:text="Enter some Information..."
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="399dp"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:hint="Enter Name"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextName"
            android:layout_width="387dp"
            android:layout_height="67dp"
            android:layout_marginLeft="4dp"
            android:inputType="text"
            android:textColor="#fbfaf0"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="399dp"
        android:layout_height="78dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_marginTop="17dp"
        android:hint="Enter Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAddress"
            android:layout_width="388dp"
            android:layout_height="67dp"
            android:inputType="text"
            android:textColor="#fbfaf0"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="399dp"
        android:layout_height="78dp"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="19dp"
        android:hint="Enter Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPhone"
            android:layout_width="388dp"
            android:textColor="#fbfaf0"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:inputType="number"
            android:layout_height="67dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="399dp"
        android:id="@+id/layoutid"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_marginLeft="4dp"
        android:hint="Enter Email ID"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAddressMail"
            android:layout_width="388dp"
            android:inputType="text"
            android:textColor="#fbfaf0"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_height="67dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="399dp"
        android:id="@+id/layoutnote"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_height="78dp"
        android:hint="Notes"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutid">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNotes"
            android:layout_width="388dp"
            android:inputType="text"
            android:textColor="#fbfaf0"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_height="67dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="399dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="78dp"
        android:layout_marginStart="9dp"
        android:id="@+id/layoutorg"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Organization"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutnote">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextOrganization"
            android:layout_width="388dp"
            android:inputType="text"
            android:textColor="#fbfaf0"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_height="67dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="399dp"
        android:id="@+id/layoutemail"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        app:hintTextColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="WebSite"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutorg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextURL"
            android:layout_width="388dp"
            android:layout_height="67dp"
            android:layout_marginLeft="4dp"
            android:inputType="text"
            android:textColor="#fbfaf0"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="197dp"
        android:layout_height="57dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonback"
        android:text="Generate"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutemail" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>